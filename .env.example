# Tactical AEGIS Environment Configuration
# Copy this file to .env and update with your values

# ===================
# Database Configuration
# ===================
POSTGRES_USER=aegis
POSTGRES_PASSWORD=aegis_secure_password_change_me
POSTGRES_DB=tactical_aegis

# ===================
# AI Services
# ===================
# Google Gemini API Key (REQUIRED)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ===================
# Security
# ===================
# Generate a secure random string for production
# Example: openssl rand -hex 32
SECRET_KEY=change-this-in-production-to-a-secure-random-string

# ===================
# Optional Services
# ===================
# Mapbox for interactive maps
MAPBOX_ACCESS_TOKEN=

# OpenWeatherMap for weather data
OPENWEATHER_API_KEY=

# NASA API for satellite imagery
NASA_API_KEY=

# Sentinel Hub for Earth observation
SENTINEL_HUB_API_KEY=

# ===================
# Application Settings
# ===================
ENVIRONMENT=production
DEBUG=false
